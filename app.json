{
    "expo": {
        "name": "AI Finance Analyzer",
        "slug": "ai-finance-analyzer",
        "version": "1.0.0",
        "orientation": "portrait",
        "icon": "./assets/icon.png",
        "userInterfaceStyle": "automatic",
        "splash": {
            "image": "./assets/splash.png",
            "resizeMode": "contain",
            "backgroundColor": "#ffffff"
        },
        "assetBundlePatterns": [
            "**/*"
        ],
        "ios": {
            "supportsTablet": true,
            "bundleIdentifier": "com.aifinanceanalyzer.app",
            "infoPlist": {
                "NSCameraUsageDescription": "This app needs camera access to scan receipts and bills",
                "NSPhotoLibraryUsageDescription": "This app needs photo library access to select receipt images"
            }
        },
        "android": {
            "adaptiveIcon": {
                "foregroundImage": "./assets/adaptive-icon.png",
                "backgroundColor": "#ffffff"
            },
            "package": "com.aifinanceanalyzer.app",
            "permissions": [
                "CAMERA",
                "READ_EXTERNAL_STORAGE",
                "WRITE_EXTERNAL_STORAGE",
                "NOTIFICATIONS"
            ]
        },
        "web": {
            "favicon": "./assets/favicon.png"
        },
        "plugins": [
            "expo-camera",
            "expo-notifications"
        ]
    }
}