{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@components/*": [
                "src/components/*"
            ],
            "@screens/*": [
                "src/screens/*"
            ],
            "@services/*": [
                "src/services/*"
            ],
            "@utils/*": [
                "src/utils/*"
            ],
            "@constants/*": [
                "src/constants/*"
            ],
            "@contexts/*": [
                "src/contexts/*"
            ],
            "@styles/*": [
                "src/styles/*"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ]
}